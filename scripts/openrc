#!/sbin/openrc-run
name=${RC_SVCNAME}
command="fz"
command_args=""
pidfile="/run/${RC_SVCNAME}/${RC_SVCNAME}.pid"
command_user="root"
logdir="/var/log/${RC_SVCNAME}"
command_background="yes"

depend() {
  need net
  use logger
}

configtest() {
  ${command} -n
}

start_pre() {
  if [ "${RC_CMD}" != "restart" ]; then
    configtest || return $?
  fi
}

stop_pre() {
  if [ "${RC_CMD}" != "restart" ]; then
    configtest || return $?
  fi
}
